@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{  
    <form asp-controller="Home" asp-action="EditPart" asp-route-id="@Model.ID" method="get">
        <button type="submit" class="btn-edit">
            <i class="fa-solid fa-pen-to-square"></i> Редактирай
        </button>
    </form>
}